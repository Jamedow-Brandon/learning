<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jamedow.learning.mapper.UserDao">
    <resultMap id="userEntity" type="com.jamedow.learning.entity.UserEntity">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
    </resultMap>

    <insert id="insertUser" parameterType="com.jamedow.learning.entity.UserEntity" keyProperty="id">
        insert into users(username,password)
        values
        (#{username},#{password});
    </insert>

    <select id="getUserEntityById" parameterType="String" resultMap="userEntity">
        select * from users where userid=#{id};
    </select>

    <select id="getUserEntities" resultMap="userEntity">
        select * from users;
    </select>
</mapper>